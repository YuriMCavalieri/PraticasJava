package atividade2;
import java.util.Scanner;
public class exercicio12 {
	public static void main(String[] args) {
	Scanner input= new Scanner(System.in);
	 System.out.print("Digite sua idade");
     int idade;
     idade= input.nextInt();
     System.out.print("Digite o seu sexo (1 para masculino, 2 para feminino): ");
     char sexo = input.next().charAt(0);
     
     double mensalidade=0;
     
     if (sexo == 1) {
         if (idade <= 15) {
             mensalidade = 60.00;
         } else if (idade <= 18) {
             mensalidade = 75.00;
         } else if (idade <= 30) {
             mensalidade = 90.00;
         } else if (idade <= 40) {
             mensalidade = 85.00;
         } else {
             mensalidade = 80.00;
         }
     } else if (sexo == 2) {
         if (idade <= 18) {
             mensalidade = 60.00;
         } else if (idade <= 25) {
             mensalidade = 90.00;
         } else if (idade <= 40) {
             mensalidade = 85.00;
         } else {
             mensalidade = 80.00;
         }
     } else {
         System.out.println("Utilize somente 1 ou 2");
         System.exit(1);
     }

     System.out.println("O valor da mensalidade a ser paga Ã©: R$ " + mensalidade);




    	 
     }
	}

